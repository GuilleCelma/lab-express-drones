
<section id="drones">
    <h2>Available drones</h2>

    <div id="droneList">
        {{#each Drones}}
            <div class="droneCard">
                <h3> {{name}}</h3>
                <h3> propellers: {{propellers}} </h3>
                <h3>Max Speed: {{maxSpeed}} k/h</h3>
                <a href="/drones/{{_id}}/edit">Edit this drone</a>
                <form action="/drones/{{_id}}/delete" method="POST">
                    <input type="submit" value="Delete">
                </form>
                
            </div>

        {{/each}}
    </div>
</section>